{
  "version": 2,
  "builds": [
    {
      "src": "server/vercel.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "server/vercel.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/health",
      "dest": "server/vercel.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/(.*)",
      "dest": "server/vercel.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "server/vercel.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ]
}